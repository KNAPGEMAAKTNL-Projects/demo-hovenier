---
import { Image } from "astro:assets";
import logoImage from "../assets/images/header-logo-de-oude-stad.webp";
import {
    Phone,
    Mail,
    MapPin,
} from "lucide-react";

const links = [
    { label: "Diensten", href: "/diensten" },
    { label: "Projecten", href: "/projecten" },
    { label: "Over Ons", href: "/over-ons" },
    { label: "Contact", href: "/contact" },
];

const services = [
    { label: "Tuinontwerp", href: "/diensten#ontwerp" },
    { label: "Tuinaanleg", href: "/diensten#aanleg" },
    { label: "Tuinonderhoud", href: "/diensten#onderhoud" },
];
---

<footer class="bg-dark text-cream/80 grain">
    {/* Decorative top border */}
    <div class="h-1 bg-gradient-to-r from-primary via-accent to-sage"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16 relative z-10">
        {/* Top section - brand + tagline */}
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 pb-16 border-b border-cream/10">
            <div>
                <a href="/" class="block mb-4">
                    <Image
                        src={logoImage}
                        alt="De Oude Stad - Hoveniersbedrijf Culemborg"
                        class="h-14 w-auto brightness-0 invert"
                        width={280}
                        height={56}
                        loading="lazy"
                        decoding="async"
                    />
                </a>
                <p class="text-cream/50 max-w-sm leading-relaxed">
                    Uw specialist voor exclusieve tuinen in Culemborg en
                    omstreken. Vakmanschap, passie en oog voor detail.
                </p>
            </div>

            {/* Social links */}
            <div class="flex gap-6 mt-8 md:mt-0">
                <a href="#" class="text-cream/40 hover:text-accent transition-colors text-sm tracking-wide uppercase link-underline" aria-label="Facebook">
                    Facebook
                </a>
                <a href="#" class="text-cream/40 hover:text-accent transition-colors text-sm tracking-wide uppercase link-underline" aria-label="Instagram">
                    Instagram
                </a>
                <a href="#" class="text-cream/40 hover:text-accent transition-colors text-sm tracking-wide uppercase link-underline" aria-label="LinkedIn">
                    LinkedIn
                </a>
            </div>
        </div>

        {/* Navigation grid */}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
            {/* Quick Links */}
            <div>
                <h3 class="text-xs tracking-[0.2em] uppercase text-cream/40 mb-6 font-medium">Navigatie</h3>
                <ul class="space-y-4">
                    {
                        links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-cream/60 hover:text-cream transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            {/* Services */}
            <div>
                <h3 class="text-xs tracking-[0.2em] uppercase text-cream/40 mb-6 font-medium">Diensten</h3>
                <ul class="space-y-4">
                    {
                        services.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-cream/60 hover:text-cream transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            {/* Contact Info */}
            <div>
                <h3 class="text-xs tracking-[0.2em] uppercase text-cream/40 mb-6 font-medium">Contact</h3>
                <ul class="space-y-5">
                    <li class="flex items-start text-cream/60">
                        <MapPin
                            className="w-4 h-4 mr-3 flex-shrink-0 text-accent mt-1"
                        />
                        <span>Hoveniersweg 12<br />4101 AA, Culemborg</span>
                    </li>
                    <li class="flex items-center text-cream/60">
                        <Phone
                            className="w-4 h-4 mr-3 flex-shrink-0 text-accent"
                        />
                        <a
                            href="tel:0612345678"
                            class="hover:text-cream transition-colors"
                            >06 1234 5678</a
                        >
                    </li>
                    <li class="flex items-center text-cream/60">
                        <Mail
                            className="w-4 h-4 mr-3 flex-shrink-0 text-accent"
                        />
                        <a
                            href="mailto:info@demo-hovenier.nl"
                            class="hover:text-cream transition-colors"
                            >info@demo-hovenier.nl</a
                        >
                    </li>
                </ul>
            </div>

            {/* CTA in footer */}
            <div>
                <h3 class="text-xs tracking-[0.2em] uppercase text-cream/40 mb-6 font-medium">Aan de slag</h3>
                <p class="text-cream/50 text-sm mb-6 leading-relaxed">
                    Benieuwd wat wij voor uw tuin kunnen betekenen?
                </p>
                <a
                    href="/contact"
                    class="inline-block border border-cream/25 hover:border-accent text-cream hover:text-accent px-6 py-3 text-sm tracking-wide uppercase font-medium transition-all"
                >
                    Contact opnemen
                </a>
            </div>
        </div>
    </div>

    {/* Bottom Bar */}
    <div class="border-t border-cream/10 relative z-10">
        <div
            class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col md:flex-row justify-between items-center text-xs text-cream/30 tracking-wide"
        >
            <p>
                &copy; {new Date().getFullYear()} Hoveniersbedrijf De Oude Stad &middot; Gemaakt door <a href="https://knapgemaakt.nl/" target="_blank" rel="noopener noreferrer" class="hover:text-cream/60 transition-colors">KNAP GEMAAKT.</a>
            </p>
            <div class="flex gap-8 mt-4 md:mt-0">
                <a href="#" class="hover:text-cream/60 transition-colors"
                    >Privacyverklaring</a
                >
                <a href="#" class="hover:text-cream/60 transition-colors"
                    >Algemene Voorwaarden</a
                >
            </div>
        </div>
    </div>
</footer>

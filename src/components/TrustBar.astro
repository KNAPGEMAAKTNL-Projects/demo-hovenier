---
const rating = 9.4;
const reviewCount = 42;
---

<section class="border-y border-sand py-6 bg-cream">
    <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-center items-center gap-6 sm:gap-16 text-sm"
    >
        {/* Rating */}
        <div class="flex items-center gap-3">
            <span class="font-serif text-2xl text-dark">{rating}</span>
            <div class="flex flex-col">
                <div class="flex gap-0.5">
                    {[1,2,3,4,5].map((star) => (
                        <svg class="w-3.5 h-3.5" viewBox="0 0 20 20">
                            <defs>
                                <linearGradient id={`star-fill-${star}`}>
                                    <stop offset={star <= 4 ? '100%' : '70%'} stop-color="var(--color-accent)" />
                                    <stop offset={star <= 4 ? '100%' : '70%'} stop-color="var(--color-accent)" stop-opacity="0.25" />
                                </linearGradient>
                            </defs>
                            <path fill={`url(#star-fill-${star})`} d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                    ))}
                </div>
                <span class="text-bark text-xs mt-0.5">
                    {reviewCount} reviews op Trustoo
                </span>
            </div>
        </div>

        <div class="hidden sm:block w-px h-8 bg-sand"></div>

        {/* VHG Certification */}
        <div class="flex items-center gap-3">
            <div class="w-8 h-8 border border-primary/30 flex items-center justify-center">
                <span class="font-serif text-xs text-primary leading-none">VHG</span>
            </div>
            <span class="text-bark text-sm tracking-wide">
                Gecertificeerd Hovenier
            </span>
        </div>

        <div class="hidden sm:block w-px h-8 bg-sand"></div>

        {/* Years of experience */}
        <div class="flex items-center gap-3">
            <span class="font-serif text-2xl text-dark">15+</span>
            <span class="text-bark text-sm tracking-wide">
                Jaar Ervaring
            </span>
        </div>
    </div>
</section>

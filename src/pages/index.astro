---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import TrustBar from "../components/TrustBar.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
import FadeIn from "../components/ui/FadeIn";
import gerealiseerdeImage from "../assets/images/gerealiseerde-tuin.webp";
---

<Layout title="Hoveniersbedrijf De Oude Stad | Culemborg" heroNav>
	<main>
		<Hero />
		<TrustBar />
		<ServicesGrid />

		{/* Featured image band - editorial break */}
		<section class="relative overflow-hidden">
			<div class="grid grid-cols-1 md:grid-cols-2">
				<div class="bg-primary grain py-20 md:py-28 px-8 md:px-16 lg:px-24 flex items-center relative z-10">
					<FadeIn client:visible direction="left">
						<div class="max-w-lg">
							<div class="flex items-center gap-4 mb-6">
								<div class="w-12 h-px bg-sage"></div>
								<span class="text-sage text-sm tracking-[0.2em] uppercase font-medium">Ons Werk</span>
							</div>
							<h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-cream mb-6 leading-tight">
								Elke tuin vertelt een verhaal<span class="text-accent">.</span>
							</h2>
							<p class="text-cream/60 text-lg leading-relaxed mb-10">
								Van strakke stadstuin tot weelderig landelijk; bekijk hoe wij
								dromen omzetten in groene werkelijkheid.
							</p>
							<a
								href="/projecten"
								class="inline-flex items-center gap-3 text-cream text-sm tracking-wide uppercase font-medium border-b border-cream/30 pb-2 hover:border-accent hover:text-accent transition-all"
							>
								Bekijk alle projecten
								<span>&rarr;</span>
							</a>
						</div>
					</FadeIn>
				</div>
				<div class="relative h-72 md:h-auto min-h-[400px]">
					<Image
						src={gerealiseerdeImage}
						alt="Gerealiseerde stadstuin met sierbestrating en groene borders in Culemborg"
						class="absolute inset-0 w-full h-full object-cover"
						widths={[640, 960, 1280]}
						sizes="(max-width: 768px) 100vw, 50vw"
						loading="lazy"
						decoding="async"
					/>
				</div>
			</div>
		</section>

		{/* CTA Band */}
		<section class="py-20 md:py-28 bg-cream border-t border-sand">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<FadeIn client:visible>
					<p class="text-accent text-sm tracking-[0.2em] uppercase font-medium mb-6">Klaar om te beginnen?</p>
					<h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-dark mb-8">
						Laten we uw tuin<br />samen vormgeven<span class="text-accent">.</span>
					</h2>
					<a
						href="/contact"
						class="inline-block bg-dark hover:bg-dark/85 text-cream px-10 py-4 text-sm tracking-wide uppercase font-medium transition-all"
					>
						Plan een Kennismaking
					</a>
				</FadeIn>
			</div>
		</section>
	</main>
</Layout>

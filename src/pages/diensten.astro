---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import FadeIn from "../components/ui/FadeIn";
import { Check } from "lucide-react";

import tuinontwerpImage from "../assets/images/tuinontwerp-en-advies.webp";
import tuinaanlegImage from "../assets/images/tuinaanleg.webp";
import tuinonderhoudImage from "../assets/images/tuinonderhoud.webp";

const services = [
    {
        id: "ontwerp",
        number: "01",
        title: "Tuinontwerp & Advies",
        alt: "Professioneel tuinontwerp met beplantingsplan op tafel in Culemborg",
        description:
            "Een goed ontwerp is de basis van jarenlang tuingeluk. Wij vertalen uw wensen naar een creatief en haalbaar plan.",
        features: [
            "3D Visualisatie mogelijk",
            "Beplantingsplan op maat",
            "Verlichtingsplan",
            "Vakkundig advies aan huis",
        ],
        image: tuinontwerpImage,
    },
    {
        id: "aanleg",
        number: "02",
        title: "Tuinaanleg",
        alt: "Vakkundige tuinaanleg met sierbestrating en groene borders",
        description:
            "Van grondwerk tot de laatste plant. Wij realiseren uw tuin met hoogwaardige materialen en vakmanschap.",
        features: [
            "Sierbestrating & Keramiek",
            "Houtbouw (Veranda's & Schuttingen)",
            "Vijvers & Waterpartijen",
            "Gazon & Kunstgras",
        ],
        image: tuinaanlegImage,
    },
    {
        id: "onderhoud",
        number: "03",
        title: "Tuinonderhoud",
        alt: "Seizoensgebonden tuinonderhoud met snoeiwerk en beplanting",
        description:
            "Uw tuin in topconditie, het hele jaar door. Van voorjaarsbeurt tot periodiek onderhoud.",
        features: [
            "Snoeiwerk & Bemesting",
            "Onkruidbeheersing",
            "Boomverzorging",
            "Vakantie-service",
        ],
        image: tuinonderhoudImage,
    },
];
---

<Layout title="Diensten | Hoveniersbedrijf De Oude Stad" heroNav>
    <main>
        {/* Header */}
        <section class="bg-primary grain pt-36 pb-20 relative z-10">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="max-w-2xl">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="w-12 h-px bg-sage"></div>
                        <span class="text-sage text-sm tracking-[0.2em] uppercase font-medium">Onze Expertise</span>
                    </div>
                    <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-cream mb-6">
                        Onze Expertise<span class="text-accent">.</span>
                    </h1>
                    <p class="text-xl text-cream/60 font-light leading-relaxed">
                        Van creatief ontwerp tot vakkundige aanleg en zorgvuldig
                        onderhoud. Wij ontzorgen u volledig.
                    </p>
                </div>
            </div>
        </section>

        {/* Service Detail Sections */}
        <div class="bg-cream">
            {
                services.map((service, index) => (
                    <section
                        id={service.id}
                        class={`scroll-mt-24 border-b border-sand`}
                    >
                        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
                            <div
                                class={`flex flex-col lg:flex-row gap-16 lg:gap-24 items-center ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
                            >
                                {/* Content Side */}
                                <div class="flex-1">
                                    <FadeIn client:visible delay={0.1}>
                                        <span class="font-serif text-7xl md:text-8xl text-sand block mb-4 leading-none">
                                            {service.number}
                                        </span>

                                        <h2 class="font-serif text-3xl md:text-4xl text-dark mb-6">
                                            {service.title}
                                        </h2>

                                        <p class="text-lg text-bark mb-10 leading-relaxed max-w-lg">
                                            {service.description}
                                        </p>

                                        <ul class="space-y-4 mb-10">
                                            {service.features.map((feature) => (
                                                <li class="flex items-center text-dark">
                                                    <div class="w-5 h-5 border border-accent/40 flex items-center justify-center mr-4 flex-shrink-0">
                                                        <Check className="w-3 h-3 text-accent stroke-[3]" />
                                                    </div>
                                                    {feature}
                                                </li>
                                            ))}
                                        </ul>

                                        <a
                                            href="/contact/"
                                            class="inline-flex items-center gap-3 text-dark text-sm tracking-wide uppercase font-medium border-b border-dark/30 pb-2 hover:border-accent hover:text-accent transition-all"
                                        >
                                            Vraag offerte aan
                                            <span>&rarr;</span>
                                        </a>
                                    </FadeIn>
                                </div>

                                {/* Image Side */}
                                <div class="flex-1 w-full">
                                    <FadeIn client:visible delay={0.2}>
                                        <div class="relative">
                                            {/* Decorative accent block */}
                                            <div class={`absolute w-full h-full bg-accent/10 ${index % 2 === 0 ? '-right-4 -bottom-4' : '-left-4 -bottom-4'}`} />
                                            <Image
                                                src={service.image}
                                                alt={service.alt}
                                                class="relative w-full h-[400px] md:h-[500px] object-cover"
                                                widths={[480, 768, 1024]}
                                                sizes="(max-width: 1024px) 100vw, 50vw"
                                                loading="lazy"
                                                decoding="async"
                                            />
                                        </div>
                                    </FadeIn>
                                </div>
                            </div>
                        </div>
                    </section>
                ))
            }
        </div>

        {/* CTA Bar */}
        <section class="bg-dark grain py-20 md:py-24 relative z-10">
            <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
                <FadeIn client:visible>
                    <p class="text-accent text-sm tracking-[0.2em] uppercase font-medium mb-6">Klaar om te beginnen?</p>
                    <h2 class="font-serif text-3xl md:text-4xl text-cream mb-8">
                        Klaar om uw tuin aan te pakken<span class="text-accent">?</span>
                    </h2>
                    <p class="text-cream/50 mb-10">
                        Neem contact op voor een vrijblijvend gesprek.
                    </p>
                    <a
                        href="/contact/"
                        class="inline-block bg-accent hover:bg-accent/85 text-cream px-10 py-4 text-sm tracking-wide uppercase font-medium transition-all"
                    >
                        Contact Opnemen
                    </a>
                </FadeIn>
            </div>
        </section>
    </main>
</Layout>
